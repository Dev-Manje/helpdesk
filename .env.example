# MongoDB Configuration
MONGO_ROOT_PASSWORD=your_secure_mongodb_root_password_here
MONGODB_URL=mongodb://admin:your_secure_mongodb_root_password_here@mongodb:27017/helpdesk?authSource=admin

# Application Configuration
SECRET_KEY=your_very_secure_random_secret_key_here_minimum_32_characters
ENVIRONMENT=production

# API Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Email Configuration (if needed)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/helpdesk.log

# Rasa Configuration
RASA_ENDPOINT=http://rasa_actions:5055/webhook
RASA_MODEL_PATH=/app/rasa/models

# Security
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Connection Pool
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=2

# Session Configuration
SESSION_TIMEOUT_MINUTES=480
JWT_EXPIRE_MINUTES=1440